<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rockscoder.lovesms.MainActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        ads:adSize="MEDIUM_RECTANGLE"
        ads:adUnitId="@string/banner_ad_unit_id" />

    <Button
        android:id="@+id/menuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btnround"
        android:text="@string/love_sms"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:onClick="startApp"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/moreApps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuBtn"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/menuBtn"
        android:layout_toStartOf="@+id/menuBtn"
        android:background="@drawable/more_apps"
        android:text="@string/more_apps"
        android:onClick="moreApps"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/rateUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/moreApps"
        android:layout_alignBottom="@+id/moreApps"
        android:layout_toEndOf="@+id/menuBtn"
        android:layout_toRightOf="@+id/menuBtn"
        android:background="@drawable/rate"
        android:text="@string/rate_us"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:onClick="rateUs"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moreApps"
        android:layout_centerHorizontal="true"
        android:background="@drawable/share"
        android:textColor="@color/text_color"
        android:layout_marginTop="23dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:onClick="share"
        android:text="@string/share_the_app" />


</RelativeLayout>
